rule_version = '2';
service cloud.firestore {
	match /databases/{database}/documents {

match /donors/{donorId} {
	allow read: if request.auth != null && resource.data.eligible == true;
allow update: if request.auth != null && request.auth.uid == donorId && request.data.eligible == true && (request.time.toMilis() - request.data.lastDonation.toMilis()) >= (90*60*60*1000)
	}
}
	}
